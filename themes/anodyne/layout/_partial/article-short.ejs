<a href="<%- url_for(item.path) %>">
    <div class="dt w-100 hover-border-main-color pointer pa3 border-color bl mv4">
        <div class="dtc v-mid w-90 black-70">
            <div>
                <% if(item.date) { %>
                    <span class="f5 fw3 lh-copy pr4"><%= item.date.format(theme.home_date_format) %></span>
                <% } %>
            </div>
            <span class="f3 fw3 lh-copy"><%- item.title || theme.default_post_title || __('default_post_title') %><span>
        </div>
        <div class="dtc v-mid w-10 f1 black-50 tr">
            <i class="<%- item.icon || theme.default_post_icon %>"></i>
        </div>
    </div>
</a>